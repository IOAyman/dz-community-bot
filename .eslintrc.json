{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": { "sourceType": "module" },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "warn", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "never" ],
    "valid-jsdoc": [ "warn", { "requireReturn": false } ]
  }
}
